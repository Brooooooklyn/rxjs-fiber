{
  "compilerOptions": {
    "target": "ES2016",
    "moduleResolution": "node",
    "module": "commonjs",
    "strictNullChecks": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "lib": [
      "dom",
      "dom.iterable",
      "es5",
      "es2015"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}